<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.activities.ProfileActivity">
    <include
        android:id="@+id/include"
        layout="@layout/header" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_logo_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/include"
        android:layout_centerHorizontal="true"
        app:civ_border_width="0dp"
        android:layout_marginTop="15dp"
        android:onClick="onClickGetImage"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/iv_logo_profile"
        android:layout_marginTop="@dimen/large_margin"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/large_margin"
        android:weightSum="0.9"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight"
            android:text="Student Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_textview_fontsize" />

        <TextView
            android:id="@+id/std_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight2"
            android:text=""
            android:textSize="@dimen/profile_font_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight"
            android:textSize="@dimen/profile_textview_fontsize"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Father Name" />

        <TextView
            android:id="@+id/father_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight2"
            android:text=""
            android:textSize="@dimen/profile_font_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight"
            android:textSize="@dimen/profile_textview_fontsize"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Mother Name" />

        <TextView
            android:id="@+id/mother_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight2"
            android:text=""
            android:textSize="@dimen/profile_font_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight"
            android:textSize="@dimen/profile_textview_fontsize"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Present Class" />

        <TextView
            android:id="@+id/present_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight2"
            android:text=""
            android:textSize="@dimen/profile_font_size"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:textColor="@color/black"
            android:layout_weight="@dimen/profile_textview_weight"
            android:textSize="@dimen/profile_textview_fontsize"
            android:textStyle="bold"

            android:text="Father Contact No" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="@dimen/profile_textview_weight2"
            android:text=""
            android:textSize="@dimen/profile_font_size"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="@dimen/profile_textview_weight"
            android:textSize="@dimen/profile_textview_fontsize"
            android:text="Address" />
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/profile_horizontal_margin"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_font_size"
            android:text="" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:onClick="onClickGetImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_logo_profile"
        android:layout_toRightOf="@+id/iv_logo_profile"
        android:src="@drawable/edit_icon" />
    <include
        android:id="@+id/progressBarHolder"
        layout="@layout/overlay"
        android:visibility="gone"
        />
</RelativeLayout>
